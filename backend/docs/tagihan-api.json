{
    "openapi": "3.1.0",
    "info": {
        "title": "Tagihan API",
        "description": "Dokumentasi endpoint Tagihan. GET /api/tagihan mendukung pencarian kode_tagihan, nama siswa, nis dan pagination per_page. POST /api/tagihan mass create tagihan berdasarkan jenjang, kelas_id, kategori_id (validasi gagal 400). PATCH /api/tagihan/{kode_tagihan} hanya mengubah jenis_tagihan_id.",
        "version": "1.0.1"
    },
    "servers": [
        {
            "url": "http://localhost:8080"
        }
    ],
    "components": {
        "parameters": {
            "Authorization": {
                "name": "Authorization",
                "in": "header",
                "schema": {
                    "type": "string"
                },
                "description": "User token dari database"
            },
            "KodeTagihanPath": {
                "name": "kode_tagihan",
                "in": "path",
                "required": true,
                "schema": {
                    "type": "string"
                },
                "description": "Primary key kode_tagihan."
            },
            "SearchQuery": {
                "name": "search",
                "in": "query",
                "required": false,
                "schema": {
                    "type": "string"
                },
                "description": "Cari partial kode_tagihan / nama siswa / nis."
            },
            "JenjangQuery": {
                "name": "jenjang",
                "in": "query",
                "required": false,
                "schema": {
                    "type": "string"
                },
                "description": "Filter tagihan berdasarkan jenjang"
            },
            "StatusQuery": {
                "name": "status",
                "in": "query",
                "required": false,
                "schema": {
                    "type": "string"
                },
                "description": "Filter tagihan berdasarkan status"
            },
            "PerPageQuery": {
                "name": "per_page",
                "in": "query",
                "required": false,
                "schema": {
                    "type": "integer",
                    "default": 30
                },
                "description": "Item per halaman (default 30)."
            }
        },
        "schemas": {
            "JenisTagihan": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "nama": {
                        "type": "string"
                    },
                    "jatuh_tempo": {
                        "type": "string",
                        "format": "date"
                    },
                    "jumlah": {
                        "type": "number"
                    }
                },
                "required": [
                    "id",
                    "nama",
                    "jatuh_tempo",
                    "jumlah"
                ]
            },
            "TagihanSiswa": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "nis": {
                        "type": "string"
                    },
                    "nama": {
                        "type": "string"
                    },
                    "jenjang": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "kelas": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": [
                                    "integer"
                                ]
                            },
                            "jenjang": {
                                "type": [
                                    "string"
                                ]
                            },
                            "nama": {
                                "type": [
                                    "string"
                                ]
                            }
                        }
                    },
                    "kategori": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": [
                                    "integer"
                                ]
                            },
                            "nama": {
                                "type": [
                                    "string"
                                ]
                            }
                        }
                    }
                },
                "required": [
                    "id",
                    "nis",
                    "nama"
                ]
            },
            "Tagihan": {
                "type": "object",
                "properties": {
                    "kode_tagihan": {
                        "type": "string"
                    },
                    "jenis_tagihan": {
                        "$ref": "#/components/schemas/JenisTagihan"
                    },
                    "siswa": {
                        "$ref": "#/components/schemas/TagihanSiswa"
                    },
                    "tmp": {
                        "type": [
                            "integer",
                            "number",
                            "null"
                        ]
                    },
                    "status": {
                        "type": "string"
                    }
                },
                "required": [
                    "kode_tagihan",
                    "jenis_tagihan",
                    "siswa",
                    "status"
                ]
            },
            "TagihanCreateRequest": {
                "type": "object",
                "properties": {
                    "jenis_tagihan_id": {
                        "type": "integer"
                    },
                    "jenjang": {
                        "type": "string",
                        "enum": [
                            "MI",
                            "KB",
                            "TK"
                        ]
                    },
                    "kelas_id": {
                        "type": "integer"
                    },
                    "kategori_id": {
                        "type": "integer"
                    }
                },
                "required": [
                    "jenis_tagihan_id",
                    "jenjang",
                    "kelas_id",
                    "kategori_id"
                ]
            },
            "TagihanPatchRequest": {
                "type": "object",
                "properties": {
                    "jenis_tagihan_id": {
                        "type": "integer"
                    }
                },
                "required": [
                    "jenis_tagihan_id"
                ],
                "description": "Hanya jenis_tagihan_id yang digunakan pada PATCH."
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "errors": {
                        "type": "object",
                        "properties": {
                            "message": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "required": [
                    "errors"
                ]
            },
            "ValidationErrorResponse": {
                "type": "object",
                "properties": {
                    "errors": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "required": [
                    "errors"
                ]
            },
            "TagihanPagination": {
                "type": "object",
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Tagihan"
                        }
                    },
                    "links": {
                        "type": "object"
                    },
                    "meta": {
                        "type": "object"
                    }
                }
            },
            "TagihanCollection": {
                "type": "object",
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Tagihan"
                        }
                    }
                }
            }
        }
    },
